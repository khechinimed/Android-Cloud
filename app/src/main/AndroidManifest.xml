<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.khechini.khechini">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KHECHINI">
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Parent activity means we will have back button in top of activity and go to the specified activity -->
        <activity
            android:name=".view.FirstActivity"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.SecondActivity"
            android:parentActivityName=".view.FirstActivity" />
        <activity
            android:name=".view.RecyclerViewActivity"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.StringsActivity"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.ResourceActivity"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.ValuesLandActivity"
            android:parentActivityName=".view.MainActivity" />
    </application>

</manifest>